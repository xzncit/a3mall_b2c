.header {
  background-color: #1b43c4;
  width: 100%;
  height: 500rpx;
}
.header .bg {
  width: 100%;
  height: 500rpx;
  float: left;
  background-image: url(/static/images/spread-bg.png);
  background-repeat: no-repeat;
  background-position: left center;
  background-size: 140%;
  color: #fff;
}
.header .bg .a-1 {
  text-align: center;
  font-size: 28rpx;
  width: 100%;
  float: left;
  margin-top: 90rpx;
}
.header .bg .num {
  text-align: center;
  font-size: 60rpx;
  width: 100%;
  float: left;
  margin-top: 20rpx;
}
.header .bg .b-1 {
  width: 100%;
  float: left;
  margin-top: 50rpx;
}
.header .bg .b-1 view {
  width: 50%;
  float: left;
}
.header .bg .b-1 view:first-child {
  width: 49%;
  border-right: 2rpx solid #fff;
  text-align: right;
}
.header .bg .b-1 view:first-child text:first-child {
  padding-right: 10rpx;
  position: relative;
  top: -2rpx;
}
.header .bg .b-1 view:first-child text:last-child {
  padding-right: 30rpx;
}
.header .bg .b-1 view:last-child text:first-child {
  padding-left: 30rpx;
  position: relative;
  top: -2rpx;
  padding-right: 10rpx;
}
.header .bg .b-1 view text:first-child {
  font-size: 26rpx;
}
.header .bg .b-1 view text:last-child {
  font-size: 36rpx;
}
.header .bg .c-1 {
  width: 100%;
  float: left;
  margin-top: 30rpx;
}
.header .bg .c-1 text {
  width: 180rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 40rpx;
  background-image: -webkit-linear-gradient(left, #3563f4, #5a80fa);
  background-image: linear-gradient(to right, #3563f4, #5a80fa);
  display: block;
  font-size: 26rpx;
  text-align: center;
}
.header .bg .c-1 text:first-child {
  float: left;
  margin-left: 23%;
}
.header .bg .c-1 text:last-child {
  float: right;
  margin-right: 23%;
}
.list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  margin-top: 20rpx;
}
.list .item {
  width: 50%;
  height: 240rpx;
  text-align: center;
  float: left;
  margin-bottom: 20rpx;
}
.list .item .item-box {
  height: 240rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.list .item .icon {
  display: block;
  width: 100%;
  float: left;
}
.list .item .icon text {
  color: #1b43c4;
  font-size: 80rpx;
}
.list .item .icon {
  margin-top: 50rpx;
}
.list .item .text {
  margin-top: 20rpx;
  font-size: 30rpx;
}
.list .item:nth-child(2n+1) > .item-box {
  margin-left: 20rpx;
  margin-right: 10rpx;
}
.list .item:nth-child(2n) > .item-box {
  margin-left: 10rpx;
  margin-right: 20rpx;
}

