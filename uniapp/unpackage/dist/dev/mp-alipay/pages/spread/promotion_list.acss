.top-placeholder {
  height: 90rpx;
  width: 100%;
}
.top {
  width: 100%;
  position: fixed;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: nowrap;
          flex-wrap: nowrap;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #fff;
  font-size: 28rpx;
  color: #666;
  border-bottom: 2rpx solid #eee;
  z-index: 111;
}
.top text {
  width: 50%;
}
.top text:first-child {
  width: 49%;
  border-right: 2rpx solid #eee;
}
.top .active {
  color: #e72a2a;
}
.list-wrap {
  width: 100%;
  margin-top: 20rpx;
}
.list-wrap .list-item {
  width: 92%;
  height: 160rpx;
  border-radius: 10rpx;
  background-color: #fff;
  margin: 0 auto;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}
.list-wrap .list-item .item-box {
  padding-left: 140rpx;
  position: relative;
}
.list-wrap .list-item .item-box .avatar {
  position: absolute;
  left: 20rpx;
  top: 30rpx;
}
.list-wrap .list-item .item-box .avatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2rpx solid #eee;
}
.list-wrap .list-item .item-box .ll {
  float: left;
  font-size: 30rpx;
}
.list-wrap .list-item .item-box .ll text {
  display: block;
}
.list-wrap .list-item .item-box .ll text:first-child {
  color: #333;
  padding-top: 40rpx;
}
.list-wrap .list-item .item-box .ll text:last-child {
  color: #999;
  font-size: 26rpx;
  padding-top: 20rpx;
}
.list-wrap .list-item .item-box .rr {
  float: right;
  margin-right: 20rpx;
}
.list-wrap .list-item .item-box .rr text {
  display: block;
  color: #666;
  text-align: right;
}
.list-wrap .list-item .item-box .rr text:nth-child(1) {
  margin-top: 40rpx;
}
.list-wrap .list-item .item-box .rr text:nth-child(2) {
  margin-top: 20rpx;
}

