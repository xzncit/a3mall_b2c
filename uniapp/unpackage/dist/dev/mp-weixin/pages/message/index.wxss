.list-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.list-box .list-item {
  width: 100%;
  height: 134rpx;
  position: relative;
  border-bottom: 1px solid #eee;
}
.list-box .list-item .list-item-content {
  padding-right: 172rpx;
  height: 134rpx;
  position: relative;
}
.list-box .list-item .list-item-content .avatar {
  border: 1px solid #ccc;
  position: absolute;
  top: 15rpx;
  left: 30rpx;
  background-color: #ccc;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.list-box .list-item .list-item-content .avatar image {
  border-radius: 50rpx;
  width: 100rpx;
  height: 100rpx;
}
.list-box .list-item .list-item-content .content {
  padding-left: 150rpx;
  padding-right: 30rpx;
  height: 134rpx;
}
.list-box .list-item .list-item-content .content .title {
  font-size: 28rpx;
  color: #000;
  padding-top: 25rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list-box .list-item .list-item-content .content .intro {
  font-size: 24rpx;
  color: #888;
  padding-top: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list-box .list-item .list-item-time {
  position: absolute;
  right: 0;
  top: 0;
  height: 134rpx;
  width: 172rpx;
}
.list-box .list-item .list-item-time .time {
  width: 160rpx;
  position: absolute;
  text-align: right;
  top: 30rpx;
  font-size: 28rpx;
  right: 30rpx;
}
.list-box .list-item .list-item-time .badge {
  position: absolute;
  top: 75rpx;
  right: 30rpx;
}

