.bg {
  background-color: #eee;
}
.msg-end {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  padding: 20rpx 0;
}
.message {
  margin-top: 30rpx;
}
.message .message-time {
  text-align: center;
  font-size: 28rpx;
  color: #909090;
  height: 40rpx;
  line-height: 40rpx;
  width: 100%;
  float: left;
}
.message .message-box {
  width: 100%;
  float: left;
  margin-bottom: 65rpx;
}
.message .message-box .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
  background-color: #fff;
}
.message .message-box .avatar image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
}
.message .message-box .content {
  padding: 20rpx;
  border-radius: 40rpx;
  max-width: 350rpx;
  min-width: 100rpx;
  height: auto !important;
  line-height: 45rpx;
  height: 45rpx;
  min-height: 45rpx;
  font-size: 24rpx;
}
.message .message-box .content-image image {
  max-width: 200rpx;
  max-height: 200rpx;
  min-width: 100rpx;
  min-height: 100rpx;
  border-radius: 20rpx;
}
.message .message-box .goods {
  padding: 20rpx;
  border-radius: 40rpx;
  background-color: #fff;
  width: 420rpx;
}
.message .message-box .goods .goods-photo {
  width: 150rpx;
  height: 150rpx;
  float: left;
}
.message .message-box .goods .goods-photo image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
}
.message .message-box .goods .goods-name {
  font-size: 24rpx;
  color: #666;
  width: 255rpx;
  float: left;
  margin-left: 10rpx;
  margin-top: 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.message .message-box .goods .goods-store-nums {
  font-size: 24rpx;
  margin-left: 10rpx;
  float: left;
}
.message .message-box .goods .goods-store-nums text {
  color: #666;
}
.message .message-box .goods .goods-store-nums text:last-child {
  padding-left: 10rpx;
}
.message .message-box .goods .goods-price {
  width: 40%;
  float: left;
  font-size: 24rpx;
  color: #fe0000;
  margin-left: 10rpx;
}
.message.l .avatar {
  float: left;
  margin-left: 20rpx;
}
.message.l .content {
  margin-left: 20rpx;
  color: #fff;
  background-color: #07a4fd;
  float: left;
}
.message.l .content-image {
  background-color: transparent;
}
.message.l .goods {
  margin-left: 20rpx;
  float: left;
}
.message.r .avatar {
  float: right;
  margin-right: 20rpx;
}
.message.r .content {
  margin-right: 20rpx;
  color: #909090;
  background-color: #fff;
  float: right;
}
.message.r .content-image {
  background-color: transparent;
}
.message.r .goods {
  margin-right: 20rpx;
  float: right;
}
.send-wrap {
  position: fixed;
  bottom: 0;
  left: 0;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  width: 100%;
  height: 110rpx;
  background-color: #f5f5f5;
}
.send-wrap .send-box .upload-image {
  float: left;
  width: 75rpx;
  height: 75rpx;
  line-height: 75rpx;
  background-color: #fff;
  border-radius: 50rpx;
  text-align: center;
  margin-top: 18rpx;
  margin-left: 15rpx;
}
.send-wrap .send-box .send-textarea {
  width: 525rpx;
  float: left;
  margin-top: 18rpx;
  margin-left: 25rpx;
}
.send-wrap .send-box .send-textarea input {
  text-indent: 15rpx;
  font-size: 29rpx;
  color: #333;
  height: 75rpx;
  line-height: 75rpx;
  border: 0px solid #fff;
  background-color: #fff;
  border-radius: 50rpx;
}
.send-wrap .send-box .send-textarea [placeholder] {
  color: #c6c6c6;
}
.send-wrap .send-box .send-btn {
  float: right;
  width: 75rpx;
  height: 75rpx;
  line-height: 75rpx;
  background-color: #fff;
  border-radius: 50rpx;
  text-align: center;
  margin-top: 18rpx;
  margin-right: 25rpx;
}

