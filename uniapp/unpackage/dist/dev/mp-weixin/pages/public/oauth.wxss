.oauth {
  width: 630rpx;
  height: 100vh;
  margin: 0 auto;
}
.oauth .logo {
  width: 100%;
  height: 540rpx;
}
.oauth .logo view {
  text-align: center;
}
.oauth .logo view:first-child {
  padding-top: 200rpx;
  font-size: 68rpx;
  color: #b91922;
  font-weight: bold;
}
.oauth .logo view:last-child {
  padding-top: 10rpx;
  font-size: 64rpx;
  color: #b91922;
}
.oauth .oauth-login view {
  height: 89rpx;
  line-height: 89rpx;
  width: 100%;
  border: 1px solid #202020;
  border-radius: 50rpx;
  text-align: center;
  font-size: 32rpx;
  position: relative;
  margin-bottom: 40rpx;
}
.oauth .oauth-login view text {
  position: absolute;
  left: 65rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  font-size: 39rpx;
}
.oauth .oauth-login #weixin {
  background-color: #5db919;
  color: #fff;
  border-color: #5db919;
}
.oauth .oauth-login #qq {
  background-color: #379adf;
  color: #fff;
  border-color: #379adf;
}
.oauth .other-login-type {
  width: 100%;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}
.oauth .other-login-type text {
  width: 50%;
  display: inline-block;
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
}
.oauth .other-login-type text:first-child {
  width: 49%;
}
.oauth .other-login-type text:first-child::after {
  content: " ";
  background-color: #666;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  right: 0;
  position: absolute;
  height: 29rpx;
  width: 2rpx;
}

