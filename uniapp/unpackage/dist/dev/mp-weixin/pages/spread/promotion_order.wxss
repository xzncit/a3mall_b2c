.list-wrap {
  width: 100%;
  margin-top: 20rpx;
}
.list-wrap .list-item {
  width: 92%;
  height: 220rpx;
  border-radius: 10rpx;
  background-color: #fff;
  margin: 0 auto;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}
.list-wrap .list-item .item-box {
  height: 220rpx;
  position: relative;
}
.list-wrap .list-item .item-box .t {
  float: left;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
.list-wrap .list-item .item-box .t text:first-child {
  float: left;
  margin-left: 20rpx;
}
.list-wrap .list-item .item-box .t text:last-child {
  float: right;
  margin-right: 20rpx;
}
.list-wrap .list-item .item-box .m {
  padding-left: 140rpx;
  float: left;
  height: 160rpx;
}
.list-wrap .list-item .item-box .m .avatar {
  position: absolute;
  left: 20rpx;
  top: 70rpx;
}
.list-wrap .list-item .item-box .m .avatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2rpx solid #eee;
}
.list-wrap .list-item .item-box .m .ll {
  float: left;
  font-size: 30rpx;
}
.list-wrap .list-item .item-box .m .ll text {
  display: block;
}
.list-wrap .list-item .item-box .m .ll text:first-child {
  color: #333;
  padding-top: 20rpx;
}
.list-wrap .list-item .item-box .m .ll text:last-child {
  color: #999;
  font-size: 26rpx;
  padding-top: 20rpx;
}

